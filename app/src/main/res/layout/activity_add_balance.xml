<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAddBalance"
    android:orientation="vertical"
    android:background="#EEEFF1"
    android:gravity="center_horizontal"
    android:weightSum="10">
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">
    </Space>
    <ImageButton
        android:id="@+id/add_balance_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#00FFFFFF"
        android:contentDescription="@string/todo"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher_background" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3">
    </Space>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.8"
        app:cardCornerRadius="15dp">

        <EditText
            android:id="@+id/add_balance_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="Amount"
            android:background="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
            android:hint="@string/amount"
            android:inputType="numberDecimal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp" />
    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4">
    </Space>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.8"
        app:cardCornerRadius="15dp">
        <EditText
            android:id="@+id/add_balance_cardNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:ems="10"
            android:maxLength="17"
            android:hint="@string/card_number"
            android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
            android:autofillHints="Card number"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4">
    </Space>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:weightSum="100">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="40"
            tools:ignore="NestedWeights"
            app:cardCornerRadius="15dp">
            <EditText
                android:id="@+id/add_balance_cardMonth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:ems="10"
                android:maxLength="2"
                android:hint="@string/month"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
                android:paddingRight="15dp"
                android:autofillHints="Month" />
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:ignore="NestedWeights"
            android:layout_weight="20"/>
        <androidx.cardview.widget.CardView
            android:layout_weight="40"
            android:layout_width="0dp"
            tools:ignore="NestedWeights"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="15dp">
            <EditText
                android:id="@+id/add_balance_cardYear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:ems="10"
                android:maxLength="2"
                android:hint="@string/year"
                android:inputType="number"
                android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:autofillHints="Year" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4">
    </Space>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="100">
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:ignore="NestedWeights"
            android:layout_weight="30"/>
        <androidx.cardview.widget.CardView
            android:layout_weight="40"
            android:layout_width="0dp"
            tools:ignore="NestedWeights"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="15dp">
            <EditText
                android:id="@+id/add_balance_cardCVV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:ems="10"
                android:maxLength="4"
                android:hint="@string/cvv"
                android:inputType="number"
                android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:autofillHints="Year" />
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:ignore="NestedWeights"
            android:layout_weight="30"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4">
    </Space>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        app:cardCornerRadius="15dp">
        <Button
            android:id="@+id/add_balance_btnAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTheme"
            android:text="@string/add_balance"
            android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7">
    </Space>
</LinearLayout>