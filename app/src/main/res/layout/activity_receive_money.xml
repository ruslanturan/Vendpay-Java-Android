<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityReceiveMoney"
    android:orientation="vertical"
    android:background="#EEEFF1"
    android:gravity="center_horizontal"
    android:weightSum="10">
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">
    </Space>
    <ImageButton
        android:id="@+id/receive_money_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#00FFFFFF"
        android:contentDescription="@string/todo"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher_background" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
        android:gravity="center|bottom"
        android:text="@string/from"
        android:textColor="#000000"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/receive_money_txtFromId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:textColor="#000000"
        android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
        android:gravity="center|bottom"
        android:textSize="30sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
        android:gravity="center|bottom"
        android:text="@string/amount"
        android:textColor="#000000"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/receive_money_txtAmount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
        android:gravity="center|bottom"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
        android:gravity="center|bottom"
        android:text="@string/unique_key"
        android:textColor="#000000"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/receive_money_txtUnique"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </Space>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        app:cardCornerRadius="15dp">
        <Button
            android:id="@+id/receive_money_btnRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTheme"
            android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
            android:text="@string/refresh"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>