<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="101dp"
    android:background="#EEEFF1"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/adapter_crdTransaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="3dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4E4E4E"
            android:orientation="vertical"
            android:weightSum="101">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:background="#4E4E4E"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/adapter_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
                    android:gravity="center"
                    android:text="100.00"
                    android:textColor="#008A2C"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5">
                </Space>
                <TextView
                    android:id="@+id/adapter_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="65.5"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
                    android:gravity="center"
                    android:text="2020-07-27"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:background="#4E4E4E"
                android:orientation="horizontal"
                android:weightSum="101">
                <TextView
                    android:id="@+id/adapter_addressId"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
                    android:gravity="center"
                    android:text="100.00"
                    android:textColor="#000000"
                    android:textSize="16sp" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5">
                </Space>
                <TextView
                    android:id="@+id/adapter_addressMail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="65.5"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/bpg_extrasquare_mtavruli_2009"
                    android:gravity="center"
                    android:text="2020-07-27"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>